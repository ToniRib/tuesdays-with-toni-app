<div class="row" id="scheduled-lesson-<%= lesson.id %>">
  <div class="col-sm-12 col-md-8">
    <h3>
      <%= lesson.name %>
    </h3>
  </div>
  <div class="col-sm-12 col-md-4">
    <h3>
      <%= lesson.scheduled_date.strftime('%a, %B %e, %Y') %>
    </h3>
  </div>
  <div class="col-sm-12">
    <p><%= lesson.description %></p>
    <p><em>Recommended for: <%= lesson.recommendations %></em></p>
  </div>
</div>
